{
  "name": "lostfocus/tripit",
  "type": "library",
  "description": "Client for the Tripit Library",
  "homepage": "https://github.com/lostfocus",
  "license": "MIT",
  "keywords": ["tripit"],
  "authors": [
    {
      "name": "Dominik Schwind",
      "email": "dschwind@lostfocus.de",
      "homepage": "https://lostfocus.de",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.85",
    "phpstan/phpstan": "^1.6",
    "phpunit/phpunit": ">=8.0",
    "rector/rector": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "Lostfocus\\Tripit\\": "Src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lostfocus\\Lostfocus\\": "Tests"
    }
  },
  "scripts": {
    "phpunit": "phpunit",
    "phpstan": "phpstan analyse Src --level=9",
    "rector": "rector",
    "phpcs": "php-cs-fixer fix Src"
  },
  "config": {
    "lock": false,
    "sort-packages": true
  }
}
